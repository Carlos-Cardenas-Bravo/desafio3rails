<h1>Nueva Serie</h1>
<%= form_with model: @film, local: true, method: :post do  |form| %>
    <% if @film.errors.any? %>
      <div id="mensaje_error">
          <h2><%= pluralize(@film.errors.count, "errores") %> prohibieron que esta serie se guardara:</h2>
          <ul>
              <% @film.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
      </div>
    <% end %>
    <div class="col-4">
      <div>
        <%= form.label :name, "Nombre", class: "form-label" %>
        <%= form.text_field :name, required: true, autofocus: true, class: "form-control" %>
      </div>
      <div>
        <%= form.label :synopsis, "Sinopsis", class: "form-label" %>
        <%= form.text_field :synopsis, required: true, class: "form-control" %>
      </div>
      <div>
        <%= form.label :director, "Director", class: "form-label" %>
        <%= form.text_field :director, required: true, class: "form-control" %>
      </div>
