<h1 class="title">DOCUMENTALES</h1>
<%= link_to 'Ingresar Nuevo Documental', new_documentary_path, class: 'button is-primary is-rounded mb-3' %>

<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sinopsis</th>
      <th>Director</th>
    </tr>
  </thead>
  <tbody>
    <% @documentaries.each do |documental| %>
      <tr>
        <td><%= documental.name %></td>
        <td><%= documental.synopsis %></td>
        <td><%= documental.director %></td>
      </tr>
    <% end %>
  </tbody>
</table>
