<h1 class="title">Nuevo Documental</h1>
<%= form_with model: @documentary, local: true, method: :post do |form| %>
  <div class="field">
    <label class="label"><%= form.label :name, "Nombre" %></label>
    <div class="control">
      <%= form.text_field :name, required: true, autofocus: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= form.label :synopsis, "Sinopsis" %></label>
    <div class="control">
      <%= form.text_field :synopsis, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= form.label :director, "Director" %></label>
    <div class="control">
      <%= form.text_field :director, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Guardar Documental", class: "button is-primary is-rounded" %>
    </div>
  </div>
<% end %>