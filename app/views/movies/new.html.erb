<h1>Nueva Película</h1>
<%= form_with model: @movie, local: true, method: :post do  |form| %>
    <% if @movie.errors.any? %>
      <div id="mensaje_error">
          <h2><%= pluralize(@movie.errors.count, "errores") %> prohibieron que esta película se guardara:</h2>
          <ul>
              <% @movie.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
      </div>
    <% end %>
  <div class="col-4">
    <div>
      <%= form.label :name, "Nombre", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div>
      <%= form.label :synopsis, "Sinopsis", class: "form-label" %>
      <%= form.text_field :synopsis, class: "form-control" %>
    </div>
    <div>
      <%= form.label :director, "Director", class: "form-label" %>
      <%= form.text_field :director, class: "form-control" %>
    </div>
    <div>
      <p></p>
      <%= form.submit "Guardar Película", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>